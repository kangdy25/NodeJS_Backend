<h1>{{title}}</h1>
{{#with post}}
    <!-- post 객체를 쉽게 사용하도록 with로 감싸기 -->
    <h2 class="text-xl">{{title}}</h2>
    <!-- 제목 -->
    <div>
        작성자 :<b>{{writer}}</b>
        <!-- 작성자 -->
    </div>
    <div>
        조회수 :
        {{hits}}
        | 작성일시 :
        {{dateString createdDt}}
        <!-- 조회수 및 작성일 -->
        <button onclick="modifyPost()">수정</button>
        <button onclick="deletePost()">삭제</button>
    </div>

    <div>
        <pre>{{content}}</pre>
        <!-- 본문 내용 -->
    </div>
    <section>
        <div>
            <h3>3개의 댓글이 있습니다.</h3>
        </div>
        <form method="post" action="/write-comment">
            <div>
                <div>
                    <input type="text" name="name" placeholder="이름" />
                    <input
                        type="password"
                        name="password"
                        placeholder="비밀번호"
                    />
                </div>
                <div>
                    <textarea
                        name="comment"
                        placeholder="댓글을 입력해주세요"
                        cols="40"
                        rows="3"
                    ></textarea>
                    <br /><br />
                    <button>댓글 쓰기</button>
                </div>
            </div>
        </form>
    </section>

    <section>
        <div>
            <div>
                작성자:
                <b>댓글 작성자</b>
            </div>
            <div>
                작성일시: 2025-09-12 16:18:00
                <button onclick="deleteComment('1')">삭제</button>
            </div>
            <div>
                <pre>{{comment}}</pre>
            </div>
        </div>
    </section>

{{/with}}
<footer>
    <div>
        <a href="/">목록으로</a>
    </div>
</footer>
<script>
    async function modifyPost() {} async function deletePost() {}
</script>