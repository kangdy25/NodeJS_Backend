<!-- views/contacts/index.ejs -->

<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head') %> <!-- 1 -->
    </head>
    <body>
        <%- include('../partials/nav') %> <!-- 2 -->
        <div class="contact contact-index">
            <h2>Index</h2>
            <ul>
                <% contacts.forEach(function(contact) { %> 
                    <li>
                        <a href="/contacts/<%= contact._id %>"><%= contact.name %></a> 
                    </li>
                <% }) %>
            </ul>
        </div>
    </body>
</html>